@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{

}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="card shadow mb-3 mt-3" style="width: auto; height: 31rem;">
                <div class="card-header bg-dark text-light">Featured</div>
                <div class="card-body">
                    <h3 class="card-title">Create your own pizza!</h3>
                    <form method="post" class="rounded-5 bg-light col-4">
                        <div>
                            <label for="pizzaName" class="mt-2 mb-1" style="font-weight: 600">Pizza name</label>
                            <input type="text" id="pizzaName" name="PizzaName" style="width: 20rem" placeholder="Name example" class="mb-3" />
                            <label class="mt-2 mb-1" style="font-weight: 600; width: 20rem;">Select toppings below</label>

                            <div style="text-align: left">
                                <input type="checkbox" id="tomatoSauce" name="TomatoSauce" style="margin: 0 3px 0 0" />
                                <label for="tomatoSauce">Tomato Sauce</label>
                                <br />
                                <input type="checkbox" id="cheese" name="Cheese" style="margin: 0 3px 0 0" />
                                <label for="cheese">Cheese</label>
                                <br />
                                <input type="checkbox" id="pepperoni" name="Pepperoni" style="margin: 0 3px 0 0" />
                                <label for="pepperoni">Pepperoni</label>
                                <br />
                                <input type="checkbox" id="ham" name="Ham" style="margin: 0 3px 0 0" />
                                <label for="ham">Ham</label>
                                <br />
                                <input type="checkbox" id="mushroom" name="Mushroom" style="margin: 0 3px 0 0" />
                                <label for="mushroom">Mushroom</label>
                                <br />
                                <input type="checkbox" id="tuna" name="Tuna" style="margin: 0 3px 0 0" />
                                <label for="tuna">Tuna</label>
                                <br />
                                <input type="checkbox" id="beef" name="Beef" style="margin: 0 3px 0 0" />
                                <label for="beef">Beef</label>
                                <br />
                                <input type="checkbox" id="pineapple" name="Pineapple" style="margin: 0 3px 0 0" />
                                <label for="pineapple">Pineapple</label>
                                <br />
                            </div>
                            <button class="mt-3 btn btn-dark text-white" type="submit">Create order</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-dark"></div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow text-white bg-dark mt-3 mb-3" style="width: 100%; height: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">Build Your Perfect Pizza</h5>
                            <p class="card-text">Create your own delicious pizza by choosing from a wide range of fresh ingredients and toppings. Whether you prefer classic flavors or want to experiment with unique combinations, our custom pizza creation allows you to personalize every aspect of your pizza.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="card shadow mb-5 text-white bg-dark" style="width: 100%; height: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">What do we offer?</h5>
                            <p class="card-text">We offer an extensive selection of toppings, including premium meats, fresh vegetables, and a variety of cheeses. From traditional favorites like pepperoni and mushrooms to gourmet options like truffle oil and goat cheese, the choice is yours.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
